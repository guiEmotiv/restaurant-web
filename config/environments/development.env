# Development Environment Configuration
# Copy to backend/.env for Django development

# Django Core Settings
DJANGO_SECRET_KEY=dev-secret-key-not-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL development:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/restaurant_dev

# Time Zone
TIME_ZONE=America/Lima

# AWS Cognito Configuration
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_YOUR_POOL_ID
COGNITO_APP_CLIENT_ID=YOUR_APP_CLIENT_ID

# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Development Features
ENABLE_DEBUG_TOOLBAR=True
LOG_LEVEL=DEBUG

# Static/Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Email Configuration (for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend