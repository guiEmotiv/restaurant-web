# Production Environment Configuration
# Copy to backend/.env for production deployment

# Django Core Settings
DJANGO_SECRET_KEY=YOUR_SECURE_SECRET_KEY_HERE
DEBUG=False
ALLOWED_HOSTS=www.xn--elfogndedonsoto-zrb.com,localhost

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL production:
# DATABASE_URL=postgresql://postgres:secure_password@localhost:5432/restaurant_production

# Time Zone
TIME_ZONE=America/Lima

# AWS Cognito Configuration
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_YOUR_POOL_ID
COGNITO_APP_CLIENT_ID=YOUR_APP_CLIENT_ID

# API Configuration
API_BASE_URL=https://www.xn--elfogndedonsoto-zrb.com
CORS_ALLOWED_ORIGINS=https://www.xn--elfogndedonsoto-zrb.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=WARNING
LOGGING_ROOT=/var/log/restaurant-app

# Static/Media Files
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Performance Settings
CONN_MAX_AGE=600
CACHE_TTL=300

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id