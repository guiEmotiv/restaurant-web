# Staging Environment Configuration
# Copy to backend/.env for staging deployment

# Django Core Settings
DJANGO_SECRET_KEY=YOUR_SECURE_SECRET_KEY_HERE
DEBUG=False
ALLOWED_HOSTS=staging.restaurant-app.com,localhost

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL staging:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/restaurant_staging

# Time Zone
TIME_ZONE=America/Lima

# AWS Cognito Configuration
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_YOUR_POOL_ID
COGNITO_APP_CLIENT_ID=YOUR_APP_CLIENT_ID

# API Configuration
API_BASE_URL=https://staging.restaurant-app.com
CORS_ALLOWED_ORIGINS=https://staging.restaurant-app.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
LOGGING_ROOT=/var/log/restaurant-app

# Static/Media Files
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password